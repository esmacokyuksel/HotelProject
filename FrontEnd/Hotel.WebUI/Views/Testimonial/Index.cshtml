@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Görsel</th>
        <th>Referans Adı</th>
        <th>Referans Ünvanı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @if (Model == null || !Model.Any())
    {
        <tr>
            <td colspan="6" class="text-center">Henüz referans kaydı bulunmamaktadır.</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.TestimonialId</td>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td><a href="/Testimonial/Delete/@item.TestimonialId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                <td><a href="/Testimonial/Update/@item.TestimonialId" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
                <td><a href="/Testimonial/Details/@item.TestimonialId" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
            </tr>
        }
    }
</table>

<a href="/Testimonial/Add" class="btn mb-1 btn-rounded btn-outline-info">Yeni Referans Ekle</a>
